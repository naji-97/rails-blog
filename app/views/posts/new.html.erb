<h1>New Post</h1>

<%= form_with(model: @post, url: user_posts_path(@current_user.id), class: 'flex') do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class:'title' %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text, rows:5, class:'text' %>
  </div>

  <%= form.submit 'Create Post', class:'btn' %>
<% end %>
