<div class="post" id="post-card-<%= post.id %>">
  <h2> <%= post.title %> #<%= post.id %> </h2>
  <p> <%= post.text.slice(0, 150).concat('...') %> </p>
  <small>Comments: <%= post.comments_counter %></small>

  <%= form_with model: @like, url: user_post_likes_path(post.author_id, post), method: :post, class: 'btn-container' do |form| %>
    <%= form.button type: :submit, class:'btn' do %>
      <%= post.likes_counter %> Likes
    <% end %>
  <% end %>

  <%= link_to 'Add Comment', user_post_path(post.author_id, post) %>

</div>
