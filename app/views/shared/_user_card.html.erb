<div class="user-card">
  <div class="img-container">

    <img class="user-img" src="<%= user.photo %>" alt="<%= user.name %>" id="<%= user.name %>">
  </div>
  <div class="name-container">
    <h2 class="user-name"><%= user.name %></h2>
    <small class="counter">Number of Posts: <%= user.posts_counter %></small>
  </div>
</div>


